<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- TextView untuk Menu Options (Tiga Titik Vertikal) -->
            <TextView
                android:id="@+id/tvOptions"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="&#8942;"
                android:textSize="28sp"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#757575"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- TextView untuk Nama Barang -->
            <TextView
                android:id="@+id/tvItemNamaBarang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Nama Barang Placeholder"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:ellipsize="end"
                android:maxLines="2"
                app:layout_constraintEnd_toStartOf="@+id/tvOptions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Layout horizontal untuk Stok dan Harga -->
            <LinearLayout
                android:id="@+id/layoutInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvItemNamaBarang">

                <!-- TextView untuk Stok Barang -->
                <TextView
                    android:id="@+id/tvItemStokBarang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stok: XX"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:drawableStart="@drawable/ic_inventory"
                    android:drawablePadding="6dp"
                    android:gravity="start|center_vertical" />

                <!-- TextView untuk Harga Barang -->
                <TextView
                    android:id="@+id/tvItemHargaBarang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp YY.YYY"
                    android:textSize="16sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_price"
                    android:drawablePadding="6dp"
                    android:gravity="end|center_vertical" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
