<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- TextView untuk menampilkan hasil -->
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:textColor="#333333"
        android:textSize="100sp"
        android:layout_marginBottom="32dp" />

    <!-- EditText untuk input angka pertama -->
    <EditText
        android:id="@+id/editTextNumber1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Angka Pertama"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp" />

    <!-- EditText untuk input angka kedua -->
    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Angka Kedua"
        android:inputType="numberDecimal"
        android:layout_marginBottom="32dp" />

    <!-- Button untuk operasi penjumlahan -->
    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#4CAF50"
        android:text="PENJUMLAHAN"
        android:textColor="@android:color/white" />

    <!-- Button untuk operasi pengurangan -->
    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#F44336"
        android:text="PENGURANGAN"
        android:textColor="@android:color/white" />

    <!-- Button untuk operasi perkalian -->
    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#2196F3"
        android:text="PERKALIAN"
        android:textColor="@android:color/white" />

    <!-- Button untuk operasi pembagian -->
    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FF9800"
        android:text="PEMBAGIAN"
        android:textColor="@android:color/white" />

</LinearLayout>